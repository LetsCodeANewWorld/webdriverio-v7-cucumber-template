{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "moduleResolution": "node",
        "sourceMap": false,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "outDir": "typeScript",
        "typeRoots": [ "./node_modules/@types" ],
        "types": ["node", "webdriverio/sync", "@wdio/sync", "@wdio/cucumber-framework", "chai"]
    },
    "exclude": [
        "node_modules",
        "typescript"
    ],
    "compileOnSave": false
  }
